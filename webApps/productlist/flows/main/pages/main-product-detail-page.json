{
  "pageModelVersion": "19.1.3",
  "title": "Product Detail",
  "description": "Displays record for Product",
  "variables": {
    "product": {
      "type": "page:getProductResponse"
    },
    "productId": {
      "type": "string",
      "required": true,
      "input": "fromUrl"
    }
  },
  "types": {
    "getProductResponse": {
      "id": "number",
      "productName": "string",
      "productDescription": "string",
      "unitPrice": "number"
    },
    "@decorators.getProductResponse": {
      "endpoint": "get_Product",
      "service": "businessObjects",
      "path": "response"
    }
  },
  "chains": {
    "goBackChain": {
      "root": "navigateBack",
      "actions": {
        "navigateBack": {
          "module": "vb/action/builtin/navigateBackAction",
          "outcomes": {
            "success": ""
          }
        }
      }
    },
    "loadProductChain": {
      "root": "loadProduct",
      "actions": {
        "loadProduct": {
          "module": "vb/action/builtin/restAction",
          "parameters": {
            "endpoint": "businessObjects/get_Product",
            "uriParams": {
              "Product_Id": "{{ $page.variables.productId }}"
            },
            "responseType": "page:getProductResponse"
          },
          "outcomes": {
            "success": "assignPayload",
            "failure": "fireErrorNotification"
          }
        },
        "assignPayload": {
          "module": "vb/action/builtin/assignVariablesAction",
          "parameters": {
            "$page.variables.product": {
              "source": "{{ $chain.results.loadProduct.body || $chain.results.loadProduct.content }}"
            }
          },
          "outcomes": {}
        },
        "fireErrorNotification": {
          "module": "vb/action/builtin/fireNotificationEventAction",
          "parameters": {
            "summary": "Could not load data",
            "message": "{{ 'Could not load data: status ' + $chain.results.loadProduct.payload.status }}",
            "type": "error",
            "displayMode": "persist"
          },
          "outcomes": {}
        }
      }
    }
  },
  "eventListeners": {
    "backButtonClicked": {
      "chains": [
        {
          "chainId": "goBackChain"
        }
      ]
    },
    "vbEnter": {
      "chains": [
        {
          "chainId": "loadProductChain"
        }
      ]
    }
  },
  "imports": {
    "components": {
      "oj-form-layout": {
        "path": "ojs/ojformlayout"
      },
      "oj-input-text": {
        "path": "ojs/ojinputtext"
      },
      "oj-input-number": {
        "path": "ojs/ojinputnumber"
      },
      "oj-toolbar": {
        "path": "ojs/ojtoolbar"
      },
      "oj-button": {
        "path": "ojs/ojbutton"
      }
    }
  }
}